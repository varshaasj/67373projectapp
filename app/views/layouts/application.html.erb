<!DOCTYPE html>
<html>
  <head>
    <title>BabyMilkApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%# <%= javascript_include_tag 'application'%>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Bitter|Josefin+Sans|Nunito|Varela+Round" %>
  
  </head>

  <body>
    <%= render :partial => "partials/topbar" %>
    <%= render :partial => "partials/nav" %>
    <div id="login">
      <% if logged_in? %>
        <div class="right align">
          <i class="material-icons">person</i>
        </div>
        <div class="right align">
        <%="Welcome, #{current_user.proper_name} | "%><%=link_to "Logout", logout_path%>
        </div>
      <% else %>
        <div class="right align">
        <i class="material-icons">person</i>
        </div>
        <%= link_to 'Login', login_path, class:'right' %>
        
      <% end %>
		</div>
  
    <br>
    <div class="container">
      <div class="row">
        <div class="col s12">
          <%= render :partial => "partials/flash" %>
            <!-- MAIN CONTENT OF TEMPLATE GOES HERE -->
            <%= yield %>

        </div>
      </div>
    </div>
    
    <%= render :partial => "partials/footer" %> 
    <%= javascript_include_tag 'application' %>  
  </body>
</html>
