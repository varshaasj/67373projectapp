<% if @visits.empty? %>
<h4>There are no patients in the system at this time.</h4>
<% else %>
 <h4>Visits</h4>
<div class="row">
  <div class="col s9 center">
  <div class="card">
        <div class="card-content">

  <table class="striped highlight centered">
    <thead>
      <th>Patient</th>
      <th>adm date</th>
      
    </thead>
    <% for visit in @visits %>
      <tr>
        <td><%= link_to "#{visit.patient_id}", patient_path(visit.patient_id) %></td>
        <td><%= "#{visit.admission_date}"%></td>
      </tr>
    <% end %>
  </table>
  <br />
  <%= will_paginate @visits, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
<% end %>